{
  "name": "everyday-desktop",
  "version": "0.0.1",
  "description": "Track my day everyday",
  "main": "main.js",
  "author": "Michal Szczepanski <michal@vane.pl>z",
  "repository": "https://github.com/vane/everyday-desktop",
  "license": "BSD-3-Clause",
  "scripts": {
    "start": "electron .",
    "build": "webpack",
    "dev": "webpack-dev-server"
  },
  "build": {
    "productName": "Everyday",
    "appId": "pl.vane.everyday",
    "files": [
      "build",
      "everyday",
      "node_modules/",
      "main.js",
      "index.html",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "pl.vane.everyday"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Development",
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-react-jsx": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^3.6.0",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "less": "^3.11.3",
    "less-loader": "^6.2.0",
    "style-loader": "^1.2.1",
    "update-electron-app": "^1.5.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.17.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "cross-fetch": "^3.0.5",
    "dateformat": "^3.0.3",
    "draft-js": "^0.11.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "sqlite3": "^5.0.0",
    "uuid": "^8.3.0"
  }
}
