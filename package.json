{
  "name": "Perun",
  "version": "0.0.2",
  "description": "Perun - Organise knowledge",
  "main": "main.js",
  "author": "Michal Szczepanski <michal@vane.pl>",
  "repository": "https://github.com/vane/perun",
  "license": "BSD-3-Clause",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "lint": "eslint . --ext .ts,.js",
    "electron.start": "npm run build && electron ./dist/main.js"
  },
  "build": {
    "productName": "Perun",
    "appId": "pl.vane.perun",
    "files": [
      "build",
      "perun",
      "public",
      "node_modules/",
      "main.js",
      "main.preload.js",
      "index.html",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "category": "pl.vane.perun"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons",
      "category": "Development",
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "electron-builder": "^22.7.0",
    "eslint": "^7.14.0",
    "obj2gltf": "^3.1.0",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.3",
    "update-electron-app": "^1.5.0"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.18.6",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "cross-fetch": "^3.0.5",
    "dateformat": "^3.0.3",
    "electron": "^9.1.0",
    "get-system-fonts": "^2.0.2",
    "sirv-cli": "^1.0.0",
    "sqlite3": "^5.0.0",
    "svelte-spa-router": "^3.0.5",
    "uuid": "^8.3.0"
  }
}
